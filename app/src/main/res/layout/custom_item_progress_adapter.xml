<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRouteSrc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="20dp"
        android:background="@color/cameraTransparent"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvRouteDest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cameraTransparent"
        android:textColor="@color/textColor"
        android:layout_toRightOf="@+id/tvRouteSrc"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_below="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-20dp"
        android:background="@color/cameraTransparent"
        android:textColor="@color/textColor"
        android:layout_alignBottom="@+id/tvRouteDest"
        android:text="Status : On Progress"
        android:textSize="15sp"
        />

</RelativeLayout>