<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cameraTransparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/littleBack"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="@color/chooseNav"
            android:textSize="18sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/profile_user"
        android:background="@color/homeFragmentBg"
        android:textSize="20dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/textColor" />

    <LinearLayout
        android:id="@+id/LlProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center" >

        <ImageView
            android:id="@+id/profile_pict"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile" />
    </LinearLayout>

    <TextView
        android:id="@+id/driver_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="400dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="@string/driver_name"
        android:textColor="@color/textColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/sim_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="450dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="@string/sim_no"
        android:textColor="@color/textColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="500dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="@string/driver_address"
        android:textColor="@color/textColor"
        android:textSize="20dp" />


</FrameLayout>