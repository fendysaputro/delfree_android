    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/vVerticalLine2"
        android:background="#787276"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/editTextPassword"
        android:layout_height="1dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textColor="@color/cardview_dark_background"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignLeft="@+id/editTextUsername"
        android:layout_alignStart="@+id/editTextUsername" />

    <View
        android:id="@+id/vVerticalLine3"
        android:background="#787276"
        android:layout_width="match_parent"
        android:layout_below="@+id/editTextPassword"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:textAllCaps="false"
        android:text="Sign In"
        android:textColor="#2E75B6"
        android:textSize="18sp" />

    <View
        android:id="@+id/vVerticalLine5"
        android:background="#787276"
        android:layout_width="match_parent"
        android:layout_below="@+id/loginBtn"
        android:layout_height="1dp" />

